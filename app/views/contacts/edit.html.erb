<div id="content">
	
	<% form_for @contact, :html => {:name => 'contact'} do |f| %>
		<ul class="sf-menu">
			<li><%= @save = link_to_function "Save", "contact.submit()" %></li>
			<li><%= link_to "Delete", :controller => "contacts", :action => "destroy", :id => @contact %></li>
			<li><%= link_to 'Cancel', contacts_path %></li>
