			<li><%= link_to 'Log Call', contacts_path %></li>
			<li><%= link_to 'Add Note', contacts_path %></li>
			<li><%= link_to 'View Financial', contacts_path %></li>
			<li><%= link_to 'Change Company', contacts_path %></li>
		</ul>

