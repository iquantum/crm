<div id="content">

	<% form_for @contact_status, :html => {:name => 'contact_status'} do |f| %>
		<ul class="sf-menu">
			<li><%= @save = link_to_function "Save", "contact_status.submit()" %></li>
			<li ><%= link_to 'Cancel', contact_statuses_path %></li>
		</ul>

		<br><br>
		<h3><%= @page_title %></h3>
		<br>

		<%= flash_messages %>
		
		<table class="tableData">
	  	<tr>
				<td><%= f.label :value %></td>
				<td><%= f.text_field :value %></td>
			</tr>
	  </table>
	  <script type="text/javascript">
			$("td:even").addClass("even");
			$("td:odd").addClass("odd");
		</script>
		<br>
	<% end %>
	<%= yield :layout %>
</div>
